<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <ImageView
        android:id="@+id/iv_success_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/asset_check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_success_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Link reset sandi terkirim ke email Anda!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Skripsi.Mattone.PageHeading"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_success_icon" />

    <TextView
        android:id="@+id/tv_success_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Silahkan reset kata sandi anda melalui link yang telah dikirim."
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Skripsi.PlusJakarta.Medium"
        android:textColor="#6C6C6C"
        app:layout_constraintEnd_toEndOf="@id/tv_success_title"
        app:layout_constraintStart_toStartOf="@id/tv_success_title"
        app:layout_constraintTop_toBottomOf="@id/tv_success_title" />

</androidx.constraintlayout.widget.ConstraintLayout>