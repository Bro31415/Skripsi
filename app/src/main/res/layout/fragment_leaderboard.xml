<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liga Elit"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <!-- Main Leaderboard -->
    <LinearLayout
        android:id="@+id/main_leaderboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <!-- Player 1 -->
        <LinearLayout
            android:id="@+id/player1_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/player_name1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="[Nama]"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/player_xp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Poin XP]"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Player 2 -->
        <LinearLayout
            android:id="@+id/player2_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/player_name2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="[Nama]"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/player_xp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Poin XP]"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Player 3 -->
        <LinearLayout
            android:id="@+id/player3_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/player_name3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="[Nama]"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/player_xp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Poin XP]"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Player 4 -->
        <LinearLayout
            android:id="@+id/player4_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/player_name4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="[Nama]"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/player_xp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Poin XP]"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/main_leaderboard"
        android:background="#E0E0E0"/>

    <!-- Relegation Zone -->
    <LinearLayout
        android:id="@+id/relegation_zone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_leaderboard"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/relegation_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zona Relegasi"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/relegation_player_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="[Nama]"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/relegation_player_xp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Poin XP]"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>