<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    android:layout_margin="24dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/iv_dialog_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/asset_check"
            android:contentDescription="Warning Icon" />

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            style="@style/TextAppearance.Skripsi.Mattone.Large"
            android:textColor="@android:color/black"
            tools:text="Anda yakin ingin keluar dari aplikasi?" />

        <TextView
            android:id="@+id/tv_dialog_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            style="@style/TextAppearance.Skripsi.PlusJakarta.MediumSecondary"
            tools:text="Sesi Anda akan berakhir dan Anda perlu masuk kembali untuk melanjutkan." />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_positive"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            style="@style/Skripsi.Button.Reject"
            tools:text="Keluar" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_negative"
            style="@style/Skripsi.Button.Normal"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textColor="@android:color/white"
            tools:text="Batal" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>