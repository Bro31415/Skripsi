<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.auth.ForgotPasswordActivity">

    <TextView
        android:id="@+id/tv_email"
        android:layout_marginTop="110dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lupa Kata Sandi Anda?"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Masukkan alamat email yang terdaftar pada akun anda"
        />

    <EditText
        android:id="@+id/et_email"
        android:layout_marginHorizontal="50dp"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Alamat Email"
        />

    <TextView
        android:id="@+id/tv_resetmsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cek email anda untuk tautan reset kata sandi"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btn_resetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kirim Tautan Reset"
        />

    <Button
        android:id="@+id/btn_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kembali Ke Login"
        />




</LinearLayout>