<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gold"
    android:padding="24dp">

    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            app:srcCompat="@drawable/asset_trophy"
            android:contentDescription="Achievement Icon" />

        <TextView
            android:id="@+id/achievementTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Penghargaan Terbuka!"
            style="@style/TextAppearance.Skripsi.Mattone.Large"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/achievementName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Try"
            style="@style/TextAppearance.Skripsi.PlusJakarta.SemiLarge"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/achievementDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kamu menyelesaikan kuis untuk pertama kalinya!"
            style="@style/TextAppearance.Skripsi.PlusJakarta.MediumSecondary"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</RelativeLayout>