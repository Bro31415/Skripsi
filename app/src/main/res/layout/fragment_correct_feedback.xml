<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/correctFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/correct"
    android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/correctText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jawabanmu Benar!"
                    style="@style/TextAppearance.Skripsi.Mattone.Large"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/xpText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="+10 XP"
                    android:textColor="@color/white"
                    style="@style/TextAppearance.Skripsi.PlusJakarta.Medium" />

                <LinearLayout
                    android:id="@+id/correctAnswerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/edit_text_background"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone"
                    tools:visibility="visible">

                        <TextView
                            android:id="@+id/correctSentenceText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/black"
                            style="@style/TextAppearance.Skripsi.PlusJakarta.Medium"
                            tools:text="Abdi nuju mésér buku di toko." />

                        <ImageButton
                            android:id="@+id/listenButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="end"
                            android:layout_marginTop="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Dengekeun jawaban"
                            android:src="@drawable/ic_speaker" />
                </LinearLayout>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:text="Lanjut"
            android:textColor="@color/black"
            app:backgroundTint="@color/green"
            app:cornerRadius="15dp"
            style="@style/TextAppearance.Skripsi.PlusJakarta.Medium"/>

</RelativeLayout>