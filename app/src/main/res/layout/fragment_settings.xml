<?xml version="1.0" encoding="utf-8"?>
<!-- 1. Using LinearLayout for a simple vertical stack is cleaner -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/light_blue"
    tools:context=".ui.settings.SettingsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:text="Pengaturan"
        android:textColor="@android:color/black"
        style="@style/TextAppearance.Skripsi.Mattone.Large"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_reset_password"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="24dp"
        android:gravity="center_vertical|start"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="Ganti Password"
        android:textColor="@android:color/black"
        android:textAllCaps="false"
        style="@style/TextAppearance.Skripsi.PlusJakarta.Medium"
        app:backgroundTint="@android:color/white"
        app:cornerRadius="15dp"
        app:elevation="0dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_reset_progress"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="24dp"
        android:gravity="center_vertical|start"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="Reset Progress"
        android:textColor="@android:color/black"
        android:textAllCaps="false"
        style="@style/TextAppearance.Skripsi.PlusJakarta.Medium"
        app:backgroundTint="@android:color/white"
        app:cornerRadius="15dp"
        app:elevation="0dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="24dp"
        android:gravity="center_vertical|start"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="Keluar dari Aplikasi"
        android:textColor="@android:color/black"
        android:textAllCaps="false"
        style="@style/TextAppearance.Skripsi.PlusJakarta.Medium"
        app:backgroundTint="@android:color/white"
        app:cornerRadius="15dp"
        app:elevation="0dp"/>

</LinearLayout>