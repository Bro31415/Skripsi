<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Skripsi.PlusJakarta.Small">
        <item name="android:fontFamily">@font/plusjkt_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Skripsi.PlusJakarta.Medium">
        <item name="android:fontFamily">@font/plusjkt_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Skripsi.ClimateCrisis.Logo" parent="">
        <item name="android:fontFamily">@font/climatecrisis</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">64sp</item>
    </style>


    <style name="ShapeAppearance.Skripsi.Button.Pill" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Skripsi.Button.Base" parent="Widget.Material3.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Skripsi.Button.Pill</item>

        <item name="android:fontFamily">@font/mattone</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Skripsi.Button.Normal" parent="Skripsi.Button.Base">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Skripsi.Button.Confirmation" parent="Skripsi.Button.Base">
        <item name="android:backgroundTint">#6AFF8A </item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>